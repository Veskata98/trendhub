generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id             String  @id
  email_address  String  @unique
  first_name     String?
  last_name      String?
  username       String  @unique
  image_url      String
  trends         Trend[] @relation("TrendMembers")
  created_trends Trend[] @relation("CreatorTrends")

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Trend {
  id          String  @id @unique @default(uuid())
  name        String  @unique
  description String?

  creator_name String
  creator      Profile   @relation("CreatorTrends", fields: [creator_name], references: [username], onDelete: Cascade)
  members      Profile[] @relation("TrendMembers")

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
